{
    "name": "shayanabbas/accessibility-enhancer",
    "description": "A WordPress plugin to enhance accessibility.",
    "type": "wordpress-plugin",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Shayan Abbas",
            "email": "shayanabbas@outlook.com"
        }
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.11",
        "wp-coding-standards/wpcs": "^3.1",
        "phpcompatibility/php-compatibility": "^9.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpcsstandards/phpcsutils": "^1.0",
        "phpcsstandards/phpcsextra": "^1.2"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs --extensions=php . --ignore=\"node_modules,vendor\"",
        "phpcbf": "vendor/bin/phpcbf --extensions=php . --ignore=\"node_modules,vendor\""
    }
}
